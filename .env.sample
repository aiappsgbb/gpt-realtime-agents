# Copy this file to .env and replace placeholder values with your Azure resource details.

# ====================================
# Zero Trust Authentication Configuration
# ====================================
# This application uses Azure Managed Identity for authentication.
# No API keys are required or supported for production deployments.
# Local development uses Azure Developer CLI credentials (azd auth login).

# ====================================
# Azure OpenAI Realtime API Configuration
# ====================================
# Required: Azure OpenAI endpoints (no API keys)
WEBRTC_URL="https://<region>.realtimeapi-preview.ai.azure.com/v1/realtimertc"
AZURE_GPT_REALTIME_URL="https://<resource-name>.openai.azure.com/openai/realtimeapi/sessions?api-version=2025-04-01-preview"
AZURE_OPENAI_ENDPOINT_WS="wss://<resource-name>.openai.azure.com"
AZURE_OPENAI_MODEL_NAME="gpt-realtime"
AZURE_GPT_REALTIME_VOICE="verse"

# ====================================
# Azure Communication Services (ACS) Configuration
# ====================================
# Optional: For phone call integration (endpoint only - no connection string with keys)
AZURE_ACS_ENDPOINT="https://<your-acs-resource>.communication.azure.com"
ACS_PHONE_NUMBER="+1234567890"

# Callback URLs (auto-configured for Azure deployment, use ngrok for local development)
CALLBACK_EVENTS_URI="https://<your-callback-url>/api/callbacks"
CALLBACK_URI_HOST="wss:/<your-callback-url>"

# ====================================
# Voice Live Configuration
# ====================================
# Optional: Voice Live endpoint (endpoint only - no API key)
AZURE_VOICELIVE_ENDPOINT="https://<endpoint>.cognitiveservices.azure.com/"
AZURE_VOICELIVE_MODEL="gpt-realtime"
AZURE_VOICELIVE_VOICE="en-US-Ava:DragonHDLatestNeural"
AZURE_VOICELIVE_REGION="swedencentral"
AZURE_VOICELIVE_API_VERSION="2025-05-01-preview"
USE_VOICELIVE_FOR_ACS=false